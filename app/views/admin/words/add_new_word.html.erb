<% pronouns = PersonalPronoun.all.map(&:ru_whom) %>
<div id="active_admin_content" class="without_sidebar">
  <div id="main_content_wrapper">
    <div id="main_content">
      <%= semantic_form_for :wordset, url: word_path do |f| %>
        <%= f.inputs 'Word' do %>
          <%= f.input :word %>
        <% end %>
        <%= f.inputs 'English', for: :en do |en| %>
          <%= en.input :common %>
          <%= en.input :specific_present_statement %>
          <%= en.input :specific_past_statement %>
        <% end %>
        <%= f.inputs 'Russian', for: :ru do |ru| %>
          <%= ru.inputs 'Present I', for: :present_i do |present_i| %>
            <%= present_i.input :word %>
            <%= present_i.input :pronouns, as: :check_boxes, collection: pronouns %>
          <% end %>
          <%= ru.inputs 'Present You', for: :present_you do |present_you| %>
            <%= present_you.input :word %>
            <%= present_you.input :pronouns, as: :check_boxes, collection: pronouns %>
          <% end %>
