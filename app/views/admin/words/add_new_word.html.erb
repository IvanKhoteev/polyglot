          <% end %>
          <%= ru.inputs 'Past She', for: :past_she do |past_she| %>
            <%= past_she.input :word %>
            <%= past_she.input :pronouns, as: :check_boxes, collection: pronouns %>
          <% end %>
          <%= ru.inputs 'Future I', for: :future_i do |future_i| %>
            <%= future_i.input :word %>
            <%= future_i.input :pronouns, as: :check_boxes, collection: pronouns %>
          <% end %>
          <%= ru.inputs 'Future You', for: :future_you do |future_you| %>
            <%= future_you.input :word %>
            <%= future_you.input :pronouns, as: :check_boxes, collection: pronouns %>
          <% end %>
          <%= ru.inputs 'Future We', for: :future_we do |future_we| %>
            <%= future_we.input :word %>
            <%= future_we.input :pronouns, as: :check_boxes, collection: pronouns %>
