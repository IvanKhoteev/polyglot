            <%= future_she.input :word %>
            <%= future_she.input :pronouns, as: :check_boxes, collection: pronouns %>
          <% end %>
        <% end %>
        <%= f.inputs 'Interrogatives', for: :interrogatives do |ru| %>
          <%= ru.input :interrogatives, as: :check_boxes, collection: Interrogative.all.map(&:ru) %>
        <% end %>
        <%= f.actions do %>
          <%= f.action :submit, :as => :button %>
        <% end %>
      <% end %>
   </div>
  </div>
</div>
