            <%= present_they.input :pronouns, as: :check_boxes, collection: pronouns %>
          <% end %>
          <%= ru.inputs 'Present He', for: :present_he do |present_he| %>
            <%= present_he.input :word %>
            <%= present_he.input :pronouns, as: :check_boxes, collection: pronouns %>
          <% end %>
          <%= ru.inputs 'Present She', for: :present_she do |present_she| %>
            <%= present_she.input :word %>
            <%= present_she.input :pronouns, as: :check_boxes, collection: pronouns %>
          <% end %>
          <%= ru.inputs 'Past I', for: :past_i do |past_i| %>
            <%= past_i.input :word %>
            <%= past_i.input :pronouns, as: :check_boxes, collection: pronouns %>
          <% end %>
