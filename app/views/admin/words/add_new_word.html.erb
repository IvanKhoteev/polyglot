<% pronouns = PersonalPronoun.all.map(&:ru_whom) %>
<div id="active_admin_content" class="without_sidebar">
  <div id="main_content_wrapper">
    <div id="main_content">
      <%= semantic_form_for :wordset, url: words_path do |f| %>
        <%= f.inputs 'Word' do %>
          <%= f.input :word %>
        <% end %>
        <%= f.inputs 'English', for: :en do |en| %>
          <%= en.input :common %>
          <%= en.input :specific_present_statement %>
          <%= en.input :specific_past_statement %>
        <% end %>
        <%= f.inputs 'Russian', for: :ru do |ru| %>
          <%= ru.input :present_i %>
          <%= ru.input :present_you %>
          <%= ru.input :present_we %>
          <%= ru.input :present_they %>
          <%= ru.input :present_he_she %>
          <%= ru.input :past_i %>
          <%= ru.input :past_you %>
          <%= ru.input :past_we %>
          <%= ru.input :past_they %>
          <%= ru.input :past_he %>
          <%= ru.input :past_she %>
          <%= ru.input :future_i %>
          <%= ru.input :future_you %>
          <%= ru.input :future_we %>
          <%= ru.input :future_they %>
          <%= ru.input :future_he_she %>
        <% end %>
        <%= f.inputs 'Personal Pronouns', for: :personal_pronouns do |pronoun| %>
          <%= pronoun.input :i_we, as: :check_boxes, collection: pronouns %>
          <%= pronoun.input :you, as: :check_boxes, collection: pronouns %>
          <%= pronoun.input :they, as: :check_boxes, collection: pronouns %>
          <%= pronoun.input :he_she, as: :check_boxes, collection: pronouns %>
        <% end %>
        <%= f.inputs 'Interrogatives', for: :interrogatives do |ru| %>
          <%= ru.input :interrogatives, as: :check_boxes, collection: Interrogative.all.map(&:ru) %>
        <% end %>
        <%= f.inputs 'Places', for: :places do |pretext| %>
          <%= pretext.input :pretexts, as: :check_boxes, collection: Place.pluck(:pretext_ru).uniq %>
        <% end %>
        <%= f.actions do %>
          <%= f.action :submit, :as => :button %>
        <% end %>
      <% end %>
   </div>
  </div>
</div>
